<!-- Validation failure messages -->
<% if @level.errors.any? %>
  <% @level.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit level #<%= @level.id %>
</h1>

<hr>

<!-- Form level start -->
<form action="/update_level/<%= @level.id %>" method="post">
<!-- Form level end -->

  <!-- Label and input for stage start -->
  <div class="form-group">
    <label for="stage">
      Stage
    </label>

    <!-- Input for stage start -->
    <input type="text" id="stage" name="stage" class="form-control" value="<%= @level.stage %>">
    <!-- Input for stage end -->
  </div>
  <!-- Label and input for stage end -->

  <button class="btn btn-block btn-outline-secondary">
    Update level
  </button>
</form>

<hr>

<a href="/levels">
  Go back
</a>
