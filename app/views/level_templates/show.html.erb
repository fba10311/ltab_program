<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Level #<%= @level.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/levels" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/levels/<%= @level.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit level
        </a>
      </div>

      <div class="col">
        <a href="/delete_level/<%= @level.id %>" class="btn btn-block btn-outline-secondary">
          Delete level
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Stage
      </dt>
      <dd>
        <%= @level.stage %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@level.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@level.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "level_templates/level_bouts" %>
  </div>
</div>
