<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Level #<%= @level.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/levels" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link level start -->
      <div class="col">
        <a href="/levels/<%= @level.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit level
        </a>
      </div>
      <!-- Edit link level end -->

      <!-- Delete link level start -->
      <div class="col">
        <a href="/delete_level/<%= @level.id %>" class="btn btn-block btn-outline-secondary">
          Delete level
        </a>
      </div>
      <!-- Delete link level end -->
    </div>

    <dl>
      <dt>
        Stage
      </dt>
      <!-- Display stage start -->
      <dd>
        <%= @level.stage %>
      </dd>
      <!-- Display stage end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@level.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@level.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "level_templates/level_bouts" %>
  </div>
</div>
<!-- Show Page Customization end -->
