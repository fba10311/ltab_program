<!-- Validation failure messages -->
<% if @level.present? %>
  <% if @level.errors.any? %>
    <% @level.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new level
</h1>


<hr>

<!-- Form level start -->
<form action="/create_level" method="post">
<!-- Form level end -->

  <!-- Label and input for stage start -->
  <div class="form-group">
    <label for="stage">
      Stage
    </label>

    <!-- Input for stage start -->
    <input type="text" id="stage" name="stage" class="form-control" value="<%= @level.stage %>">
    <!-- Input for stage end -->
  </div>
  <!-- Label and input for stage end -->

  <button class="btn btn-block btn-outline-secondary">
    Create level
  </button>
</form>

<hr>

<a href="/levels">
  Go back
</a>
