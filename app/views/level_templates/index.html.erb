<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All levels
    </h1>

    <a href="/levels/new" class="btn btn-block btn-outline-secondary">
      Add a new level
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "level_templates/levels_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Stage
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @levels.each do |level| %>
      <tr>
        <td>
          <%= level.id %>
        </td>

        <td>
          <%= level.stage %>
        </td>

        <td>
          <%= time_ago_in_words(level.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(level.updated_at) %> ago
        </td>

        <td>
          <a href="/levels/<%= level.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @levels, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
