<!-- Validation failure messages -->
<% if @bout.errors.any? %>
  <% @bout.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit bout #<%= @bout.id %>
</h1>

<hr>

<!-- Form bout start -->
<form action="/update_bout/<%= @bout.id %>" method="post">
<!-- Form bout end -->

  <!-- Label and input for level_id start -->
  <div class="form-group">
    <label for="level_id">
      Level
    </label>

    <!-- Input for level_id start -->
    <input type="text" id="level_id" name="level_id" class="form-control" value="<%= @bout.level_id %>">
    <!-- Input for level_id end -->
  </div>
  <!-- Label and input for level_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update bout
  </button>
</form>

<hr>

<a href="/bouts">
  Go back
</a>
