<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Rounds

    <a data-toggle="collapse" href="#bout_rounds_new_form">
      Add round
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @bout.rounds.each do |round| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/rounds/<%= round.id %>">
          <%= round.bout_id %>
        </a>

        <a href="/delete_round_from_bout/<%= round.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="bout_rounds_new_form">
        <%= render partial: "bout_templates/bout_rounds_new_form" %>
      </div>
    </div>

  </ul>
</div>
