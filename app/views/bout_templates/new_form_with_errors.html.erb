<% if @bout.present? %>
  <% if @bout.errors.any? %>
    <% @bout.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new bout
</h1>


<hr>

<form action="/create_bout" method="post">

  <div class="form-group">
    <label for="level_id">
      Level
    </label>

    <%= select_tag(:level_id, options_from_collection_for_select(Level.all, :id, :stage, @bout.level_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="bout_no">
      Bout no
    </label>

    <input type="text" id="bout_no" name="bout_no" class="form-control" value="<%= @bout.bout_no %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bout
  </button>
</form>

<hr>

<a href="/bouts">
  Go back
</a>
