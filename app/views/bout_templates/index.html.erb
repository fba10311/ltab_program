<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bouts
    </h1>

    <a href="/bouts/new" class="btn btn-block btn-outline-secondary">
      Add a new bout
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "bout_templates/bouts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Level
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bouts.each do |bout| %>
      <tr>
        <td>
          <%= bout.id %>
        </td>

        <td>
          <% if bout.level.present? %>
            <a href="/levels/<%= bout.level.id %>">
              <%= bout.level.stage %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(bout.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(bout.updated_at) %> ago
        </td>

        <td>
          <a href="/bouts/<%= bout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @bouts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
