<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Team assignment #<%= @team_assignment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/team_assignments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/team_assignments/<%= @team_assignment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit team assignment
        </a>
      </div>

      <div class="col">
        <a href="/delete_team_assignment/<%= @team_assignment.id %>" class="btn btn-block btn-outline-secondary">
          Delete team assignment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Bout
      </dt>
      <dd>
        <% if @team_assignment.bout.present? %>
          <a href="/bouts/<%= @team_assignment.bout_id %>">
            <%= @team_assignment.bout.level_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Team
      </dt>
      <dd>
        <% if @team_assignment.team.present? %>
          <a href="/teams/<%= @team_assignment.team_id %>">
            <%= @team_assignment.team.school_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@team_assignment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@team_assignment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

