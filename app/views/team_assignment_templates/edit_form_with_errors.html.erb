<!-- Validation failure messages -->
<% if @team_assignment.errors.any? %>
  <% @team_assignment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit team assignment #<%= @team_assignment.id %>
</h1>

<hr>

<!-- Form team_assignment start -->
<form action="/update_team_assignment/<%= @team_assignment.id %>" method="post">
<!-- Form team_assignment end -->

  <!-- Label and input for bout_id start -->
  <div class="form-group">
    <label for="bout_id">
      Bout
    </label>

    <!-- Input for bout_id start -->
    <%= select_tag(:bout_id, options_from_collection_for_select(Bout.all, :id, :level_id, @team_assignment.bout_id), :class => "form-control") %>
    <!-- Input for bout_id end -->
  </div>
  <!-- Label and input for bout_id end -->

  <!-- Label and input for team_id start -->
  <div class="form-group">
    <label for="team_id">
      Team
    </label>

    <!-- Input for team_id start -->
    <%= select_tag(:team_id, options_from_collection_for_select(Team.all, :id, :school_name, @team_assignment.team_id), :class => "form-control") %>
    <!-- Input for team_id end -->
  </div>
  <!-- Label and input for team_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update team assignment
  </button>
</form>

<hr>

<a href="/team_assignments">
  Go back
</a>
