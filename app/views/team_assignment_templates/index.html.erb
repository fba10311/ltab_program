<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All team assignments
    </h1>

    <a href="/team_assignments/new" class="btn btn-block btn-outline-secondary">
      Add a new team assignment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "team_assignment_templates/team_assignments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Bout
        </th>

        <th>
          Team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @team_assignments.each do |team_assignment| %>
      <tr>
        <td>
          <%= team_assignment.id %>
        </td>

        <td>
          <% if team_assignment.bout.present? %>
            <a href="/bouts/<%= team_assignment.bout.id %>">
              <%= team_assignment.bout.level_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if team_assignment.team.present? %>
            <a href="/teams/<%= team_assignment.team.id %>">
              <%= team_assignment.team.school_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(team_assignment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(team_assignment.updated_at) %> ago
        </td>

        <td>
          <a href="/team_assignments/<%= team_assignment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @team_assignments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
