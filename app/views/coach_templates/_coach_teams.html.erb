<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Teams

    <a data-toggle="collapse" href="#coach_teams_new_form">
      Add team
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @coach.teams.each do |team| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/teams/<%= team.id %>">
          <%= team.school_name %>
        </a>

        <a href="/delete_team_from_coach/<%= team.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="coach_teams_new_form">
        <%= render partial: "coach_templates/coach_teams_new_form" %>
      </div>
    </div>

  </ul>
</div>
