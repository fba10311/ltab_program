<%= search_form_for @q, :class => collapse_search_form, :id => "rounds_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :score_5, "Score 5" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :score_5_gteq, :class => "form-control", :placeholder => "Score 5 greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :score_5_lteq, :class => "form-control", :placeholder => "Score 5 less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :score_4, "Score 4" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :score_4_gteq, :class => "form-control", :placeholder => "Score 4 greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :score_4_lteq, :class => "form-control", :placeholder => "Score 4 less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :score_3_cont, "Score 3 contains" %>
    <%= f.text_field :score_3_cont, :class => "form-control", :placeholder => "Score 3 contains" %>
  </div>

  <div class="form-group">
    <%= f.label :score_2, "Score 2" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :score_2_gteq, :class => "form-control", :placeholder => "Score 2 greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :score_2_lteq, :class => "form-control", :placeholder => "Score 2 less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :score_1, "Score 1" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :score_1_gteq, :class => "form-control", :placeholder => "Score 1 greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :score_1_lteq, :class => "form-control", :placeholder => "Score 1 less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :time, "Time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='timegteqPicker' data-target-input="nearest">
          <%= f.text_field :time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Time greater than or equal to", :data => {:target => '#timegteqPicker'} %>
          <div class="input-group-append" data-target='#timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#timegteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='timelteqPicker' data-target-input="nearest">
          <%= f.text_field :time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Time less than or equal to", :data => {:target => '#timelteqPicker'} %>
          <div class="input-group-append" data-target='#timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#timelteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :team_school_name_cont, "Team school_name contains" %>
    <%= f.text_field :team_school_name_cont, :class => "form-control", :placeholder => "Team school_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :student_first_name_cont, "Student first_name contains" %>
    <%= f.text_field :student_first_name_cont, :class => "form-control", :placeholder => "Student first_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/rounds" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#rounds_filters">
  Show filters
</a>
