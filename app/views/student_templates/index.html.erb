<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All students
    </h1>

    <a href="/students/new" class="btn btn-block btn-outline-secondary">
      Add a new student
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "student_templates/students_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          First name
        </th>

        <th>
          Last name
        </th>

        <th>
          Team
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @students.each do |student| %>
      <tr>
        <td>
          <%= student.id %>
        </td>

        <td>
          <%= student.first_name %>
        </td>

        <td>
          <%= student.last_name %>
        </td>

        <td>
          <% if student.team.present? %>
            <a href="/teams/<%= student.team.id %>">
              <%= student.team.school_name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(student.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(student.updated_at) %> ago
        </td>

        <td>
          <a href="/students/<%= student.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @students, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
