<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Student #<%= @student.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/students" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link student start -->
      <div class="col">
        <a href="/students/<%= @student.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit student
        </a>
      </div>
      <!-- Edit link student end -->

      <!-- Delete link student start -->
      <div class="col">
        <a href="/delete_student/<%= @student.id %>" class="btn btn-block btn-outline-secondary">
          Delete student
        </a>
      </div>
      <!-- Delete link student end -->
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <!-- Display first_name start -->
      <dd>
        <%= @student.first_name %>
      </dd>
      <!-- Display first_name end -->

      <dt>
        Last name
      </dt>
      <!-- Display last_name start -->
      <dd>
        <%= @student.last_name %>
      </dd>
      <!-- Display last_name end -->

      <dt>
        Team
      </dt>
      <!-- Display team_id start -->
      <dd>
        <%= @student.team_id %>
      </dd>
      <!-- Display team_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@student.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@student.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->

<!-- Show Page Customization end -->
