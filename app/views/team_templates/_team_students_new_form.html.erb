<form action="/create_student_from_team" method="post">

  <div class="form-group">
    <label for="first_name">
      First name
    </label>

    <input type="text" id="first_name" name="first_name" class="form-control" value="<%= @student.first_name %>">
  </div>

  <div class="form-group">
    <label for="last_name">
      Last name
    </label>

    <input type="text" id="last_name" name="last_name" class="form-control" value="<%= @student.last_name %>">
  </div>

  <input type="hidden" name="team_id" value="<%= @team.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create student
  </button>
</form>
