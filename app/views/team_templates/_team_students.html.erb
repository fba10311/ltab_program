<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Students

    <a data-toggle="collapse" href="#team_students_new_form">
      Add student
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @team.students.each do |student| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/students/<%= student.id %>">
          <%= student.first_name %>
        </a>

        <a href="/delete_student_from_team/<%= student.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="team_students_new_form">
        <%= render partial: "team_templates/team_students_new_form" %>
      </div>
    </div>

  </ul>
</div>
