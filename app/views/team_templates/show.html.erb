<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Team #<%= @team.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/teams" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/teams/<%= @team.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit team
        </a>
      </div>

      <div class="col">
        <a href="/delete_team/<%= @team.id %>" class="btn btn-block btn-outline-secondary">
          Delete team
        </a>
      </div>
    </div>

    <dl>
      <dt>
        School name
      </dt>
      <dd>
        <%= @team.school_name %>
      </dd>

      <dt>
        School address
      </dt>
      <dd>
        <%= @team.school_address %>
      </dd>

      <dt>
        Coach
      </dt>
      <dd>
        <% if @team.coach.present? %>
          <a href="/coaches/<%= @team.coach_id %>">
            <%= @team.coach.first_name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@team.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@team.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "team_templates/team_students" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "team_templates/team_team_assignments" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "team_templates/team_rounds" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "team_templates/team_bouts" %>
  </div>
</div>
